<body>

  <div class="col-xs-12 blogs_image">
    <img class="col-xs-6 col-xs-offset-3" src="assets/blogs_header.jpg">
  </div>
  
  <div class="container">
    

    <div class="row col-md-8">
      <h1>Blog All</h1>
      <% @blogs.each do |blog| %>
        <div class="blog-panel">
          <h2><%= blog.title %></h2>
          <p><%= blog.content %></p>
          <div class="blog-links">
            <%= link_to 'Show', blog, class: 'btn btn-default' %>
            <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-info' %> |
            <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure you want to delete it?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
    
    <aside class="col-md-4 sidemenu">
      <section id="border">
        <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default"><%= link_to 'New Post', new_blog_path %></button>
            </div>
      </section>
      <section>
        <h2>My Blog</h2>
        <ul>
          <li><%= link_to 'Top' ,'/tops' %></li>
      <li><%= link_to 'Blog all' ,'/blogs' %></li>
      <li><%= link_to 'New Blog' ,'/blogs/new' %></li>
        </ul>
      </section>
    </aside>
  </div> 
</body>
 
